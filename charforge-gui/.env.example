# CharForge GUI Configuration

# Authentication Settings (Optional - disabled by default)
# Set to "true" to enable user authentication and registration
ENABLE_AUTH=false
ALLOW_REGISTRATION=false
DEFAULT_USER_ID=1

# Security
SECRET_KEY=your-secret-key-change-this-in-production

# Database
DATABASE_URL=sqlite:///./database.db

# Server Configuration
HOST=0.0.0.0
PORT=8000
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=5173

# CharForge Integration
# Path to the main CharForge directory
CHARFORGE_ROOT=../

# API Keys (Optional)
HF_TOKEN=
HF_HOME=
CIVITAI_API_KEY=
GOOGLE_API_KEY=
FAL_KEY=

# ComfyUI Integration (Optional)
COMFYUI_PATH=./ComfyUI

# Training Defaults
DEFAULT_STEPS=800
DEFAULT_BATCH_SIZE=1
DEFAULT_LEARNING_RATE=8e-4
DEFAULT_TRAIN_DIM=512
DEFAULT_RANK_DIM=8

# Inference Defaults
DEFAULT_LORA_WEIGHT=0.73
DEFAULT_TEST_DIM=1024
DEFAULT_INFERENCE_STEPS=30
DEFAULT_BATCH_SIZE_INFERENCE=4
